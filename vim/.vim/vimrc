syntax off
colorscheme wildcharm
filetype plugin indent on

let mapleader = ' '
let &background = $THEME_MODE

set shiftwidth=2
set expandtab
set smarttab
set softtabstop=2
set tabstop=4

set clipboard=unnamed,unnamedplus
set colorcolumn=80
set completeopt=menu,menuone,popup,noselect
set cursorline
set grepformat=%f:%l:%c:%m
set grepprg=rg\ --vimgrep
set hidden
set hlsearch
set incsearch
set laststatus=2
set noswapfile
set notermguicolors
set nowrap
set number
set relativenumber
set ruler
set scrolloff=8
set wildmenu
set wildmode=longest:full
set wildoptions=pum,tagfile


#!/usr/bin/env bash

# Author: Nam Nguyen <nguyenvietnam2401@gmail.com>
# Description: Convert HTML to Markdown
# License: MIT License
# Date Created: May 12, 2025
# Date Modified: December 01, 2025

input_md="$1"
input_dir=$(dirname "$input_md")
input_filename=$(basename "$input_md")
input_filename=${input_filename%.*}
output_html="$input_dir/$input_filename.html"

pandoc -s -f markdown -t html5 -o "$output_html" "$input_md"
open "$output_html"

#!/usr/bin/env bash

# Author: Nam Nguyen <nguyenvietnam2401@gmail.com>
# Description: Create a file given a template name
# License: MIT License
# Date Created: December 01, 2025
# Date Modified: December 01, 2025

# Template file:
#
# templ-<name>.txt
#
# <name> is a template name.

# GLOBALS

cmd="$(basename "${0}")"
version="0.1.0"

templ_dir="${NAMTOOLS_DATA_DIR}"

# CORE FUNCTIONS

# MAIN

main() {
  local templ_name="${1}"
  local file_path="${2}"

  local templ_file="${templ_dir}/templ-${templ_name}.txt"

  cp "${templ_file}" "${file_path}"
}

main "$@"

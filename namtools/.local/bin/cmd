#!/usr/bin/env bash

# Author: Nam Nguyen <vnngucs@outlook.com>
# Description: Find and copy/execute a command
# License: The Unlicense
# Date created: January 24, 2024
# Date modified: November 25, 2025

cmd_dir="${NAMTOOLS_DATA_DIR}"

if [[ "$1" == "ls" ]]; then
  find "$cmd_dir" -maxdepth 1 -name "cmd-*.txt" \
    | sed -e "s/^.*cmd-//" -e "s/.txt$//"
  exit 0
fi

category="$1"
cmd_file="$cmd_dir/cmd-$category.txt"

# Fuzzy search

if [[ $# -eq 0 ]]; then
  cmds=$(find "$cmd_dir" -maxdepth 1 -name "cmd-*.txt" -exec cat {} '+')
  cmd=$(echo "$cmds" | fzf)
elif [[ -e "$cmd_file" ]]; then
  cmd=$(fzf < "$cmd_file")
else
  echo "$cmd_file: No such file"
  exit 1
fi

if [[ -z "$cmd" ]]; then
  exit 0
fi

cmd=${cmd#*: }
cmd=${cmd/#[[:space:]]/}
cmd=${cmd/%[[:space:]]/}
echo "Selected command: $cmd"

# Fill in placeholders

placeholders=$(echo "$cmd" | grep -oE "<(\w|-)+>" | uniq)
if [[ -n "$placeholders" ]]; then
  echo "----------------------"
  for k in $placeholders; do
    read -r -p "$k: " v
    cmd=${cmd//$k/$v}
    echo "Command: $cmd"
  done
  echo "----------------------"
fi

# Perform an action on command

while true; do
  read -r -p "copy (c), execute (e) or quit (q)? " action
  action=$(echo "$action" | tr "[:upper:]" "[:lower:]")

  if [[ "$action" == c* ]]; then
    os=$(uname -s)
    case "$os" in
      Darwin*)
        echo -n "$cmd" | pbcopy
        ;;
      Linux*)
        echo -n "$cmd" | xclip -selection clipboard
        ;;
    esac
    echo "Copied to clipboard: $cmd"
    exit 0
  elif [[ "$action" == e* ]]; then
    echo "Executing: $cmd"
    eval "$cmd"
    exit 0
  elif [[ "$action" == q* ]]; then
    exit 0
  else
    echo "You should choose copy (c), execute (e) or quit (q)"
  fi
done

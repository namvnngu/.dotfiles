#!/usr/bin/env bash

# Author: Nam Nguyen <nguyenvietnam2401@gmail.com>
# Description: Better git checkout
# License: MIT License
# Date Created: June 27, 2024
# Date Modified: December 01, 2025

branches=()
BLACK="\033[0;30m"
RED="\033[0;31m"
GREEN="\033[0;32m"
YELLOW="\033[0;33m"
BLUE="\033[0;34m"
PURPLE="\033[0;35m"
CYAN="\033[0;36m"
WHITE="\033[0;37m"
RESET="\033[0m"
CLEAR="\033c"

get-branch() {
  branches=()
  while IFS= read -r line; do
      branches+=( "$line" )
  done < <( git branch )

  length=${#branches[@]}
  for (( i=0; i<${length}; i++ )); do
    if [[ -n "$i" ]]; then
      branches[$i]=${branches[$i]:2}
      echo -e "${PURPLE}$i: ${RESET}${branches[$i]}"
    fi
  done
}

printf "\n"
get-branch
printf "\n${RESET}Enter the number: "
read number

if (( $number < ${#branches[@]} )); then
  branch=${branches[$number]}
  printf "${RESET}"
  git checkout $branch
else
  printf "${RED}The given number is out of limit\n"
fi

#!/usr/bin/env bash

# Author: Nam Nguyen <vnngucs@outlook.com>
# Description: Open a file with the default application across operating systems
# License: The Unlicense
# Date created: June 01, 2025
# Date modified: June 01, 2025

file="$1"

if [[ ! -f "$file" ]]; then
  echo "$file: No such file"
  exit 1
fi

case "$(uname)" in
  Darwin)
    open "$file"
    ;;
  Linux)
    xdg-open "$file"
    ;;
  MINGW* | MSYS* | CYGWIN* | Windows_NT)
    start "" "$file"
    ;;
  *)
    echo "Unsupported OS"
    exit 1
    ;;
esac

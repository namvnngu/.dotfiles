nvim install a plugin given URL: git clone --depth=1 --filter=blob:none <url> "$HOME/.local/share/nvim/site/pack/plugins/start/$(basename <url>)"
nvim intall plugins given a file of plugins list: xargs -n1 -P8 -I{} sh -c 'git clone --depth=1 --filter=blob:none {} "$HOME/.local/share/nvim/site/pack/plugins/start/$(basename {})"' < <file-path>
nvim uninstall a plugin: rm -rf $(find "$HOME/.local/share/nvim/site/pack/plugins/start" -mindepth 1 -maxdepth 1 -type d | fzf)
nvim unsintall all plugins: rm -rf "$HOME/.local/share/nvim/site"

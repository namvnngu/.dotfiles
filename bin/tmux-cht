#!/usr/bin/env bash

# Reference: https://github.com/ThePrimeagen/.dotfiles/blob/master/bin/.local/bin/tmux-cht.sh

selected=`cat ~/dotfiles/bin/resources/tmux-cht-languages ~/dotfiles/bin/resources/tmux-cht-commands | fzf`
if [[ -z $selected ]]; then
    exit 0
fi

read -p "Enter Query: " query

if printf "$languages" | grep -qs $selected; then
  processed_query=`echo $query | tr ' ' '+'`
  tmux neww bash -c "curl cht.sh/$selected/$processed_query & while [ : ]; do sleep 1; done"
else
  tmux neww bash -c "curl cht.sh/$selected~$query & while [ : ]; do sleep 1; done"
fi


#!/usr/bin/env python3

import random
import sys

lower = 'abcdefghijklmnopqrstuvwxyz'
upper = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'
number = '0123456789'
punctuation = '"#$%&\'()*+,-./:;<=>?@[\\]^_`{|}~'
combination = lower + upper + number + punctuation

length = 8
if len(sys.argv) > 1:
    length = int(sys.argv[1])

password = ''.join(random.sample(combination, length))

print(password)

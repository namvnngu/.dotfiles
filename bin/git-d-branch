#!/usr/bin/env bash

branches=()
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'

function get-branch() {
  branches=()
  while IFS= read -r line; do
      branches+=( "$line" )
  done < <( git branch )

  length=${#branches[@]}
  for (( i=0; i<${length}; i++ ));
  do
    if [ -n "$i" ]; then
      branches[$i]=${branches[$i]:2}
      echo -e "  ${RED}$i: ${GREEN}${branches[$i]}"
    fi
  done
}

printf "\033c"
get-branch
printf "\n  ${BLUE}Enter the number: "
read number

branch=${branches[$number]}

while [[ $branch != quit ]]; do
  git branch -D $branch
  success=$?
  printf "\033c"

  get-branch
  if [ $success -ne 0 ]; then
    printf "\n   ${YELLOW} There is no $branch branch\n"
  else
    printf "\n   ${YELLOW} Deleted $branch\n"
  fi

printf "\n  ${BLUE}Enter the number: "
  read number
  branch=${branches[$number]}
done

printf "\n  âœ¨ ${GREEN}Done...\n"
